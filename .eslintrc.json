{
    "extends": "airbnb",
    "globals": {
        "describe": true,
        "it": true
    },
    "rules": {
        "indent": ["error", 4],
        "array-bracket-spacing": ["error", "always"],
        "arrow-body-style": ["error", "as-needed"],
        "no-multi-spaces": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    }
}